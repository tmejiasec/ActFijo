        <intercept-url pattern="/contenido/cierre_mes.xhtml" access="hasRole('TECNICO') OR hasRole('ADMINISTRADOR')" />
        <intercept-url pattern="/contenido/consoli_mes.xhtml" access="hasRole('TECNICO') OR hasRole('ADMINISTRADOR')" />
        <intercept-url pattern="/contenido/retro_mes.xhtml" access="hasRole('ADMINISTRADOR')" />
        <intercept-url pattern="/contenido/proveedores.xhtml" access="hasRole('TECNICO') OR hasRole('ADMINISTRADOR')" />
        <intercept-url pattern="/contenido/supervisores.xhtml" access="hasRole('TECNICO') OR hasRole('ADMINISTRADOR')" />
